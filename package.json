{
  "name": "capybara-memory",
  "displayName": "Capybara Memory",
  "description": "Your calm and wise AI coding companion with Single-Focus Workflow that learns from your mistakes automatically",
  "icon": "assets/icon.png",
  "version": "2.1.8",
  "publisher": "eduardocecon",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "learning",
    "productivity",
    "automation",
    "prevention",
    "task-management"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "capybara.test",
        "title": "üß™ Test Capybara Extension",
        "category": "Capybara"
      },
      {
        "command": "capybara.init",
        "title": "ü¶´ Initialize Capybara",
        "category": "Capybara"
      },
      {
        "command": "capybara.createTask",
        "title": "‚ûï Create New Task",
        "category": "Capybara"
      },
      {
        "command": "capybara.currentTask",
        "title": "üéØ Current Task",
        "category": "Capybara"
      },
      {
        "command": "capybara.allTasks",
        "title": "üìã Manage All Tasks",
        "category": "Capybara"
      },
      {
        "command": "capybara.pauseTask",
        "title": "‚è∏Ô∏è Pause Current Task",
        "category": "Capybara"
      },
      {
        "command": "capybara.completeTask",
        "title": "‚úÖ Complete Current Task",
        "category": "Capybara"
      },
      {
        "command": "capybara.history",
        "title": "üìö Task History",
        "category": "Capybara"
      },
      {
        "command": "capybara.createSmartTask",
        "title": "ü§ñ Create Smart Task (Legacy)",
        "category": "Capybara"
      },
      {
        "command": "capybara.addPreventionRule",
        "title": "üö® Add Prevention Rule (Legacy)",
        "category": "Capybara"
      }
    ],
    "configuration": {
      "title": "Capybara",
      "properties": {
        "capybara.autoUpdateCopilotContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update Copilot context when prevention rules change"
        },
        "capybara.maxPreventionRules": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of prevention rules to include in Copilot context"
        },
        "capybara.taskTimeEstimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic task time estimation and atomicity analysis"
        },
        "capybara.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for Capybara events"
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/capybara.json"
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown.capybara",
        "path": "./syntaxes/capybara-task.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/runTest.js",
    "test-watch": "npm run test -- --watch",
    "package": "vsce package --dependencies",
    "package-webpack": "webpack --mode production && vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "date-fns": "^2.29.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cecon/capybara-framework.git"
  },
  "bugs": {
    "url": "https://github.com/cecon/capybara-framework/issues"
  },
  "homepage": "https://github.com/cecon/capybara-framework#readme",
  "license": "MIT",
  "author": "",
  "type": "commonjs"
}
