{
  "name": "forge-framework",
  "displayName": "FORGE Framework",
  "description": "Transform your AI coding assistant into a learning partner that remembers your mistakes and prevents them automatically",
  "version": "1.0.23",
  "publisher": "eduardocecon",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "copilot",
    "learning",
    "productivity",
    "automation",
    "prevention",
    "task-management"
  ],
  "activationEvents": [
    "workspaceContains:.forge"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "forge.init",
        "title": "Initialize FORGE Framework",
        "category": "FORGE"
      },
      {
        "command": "forge.createTask",
        "title": "Create New Task",
        "category": "FORGE"
      },
      {
        "command": "forge.addPreventionRule",
        "title": "Add Prevention Rule",
        "category": "FORGE"
      },
      {
        "command": "forge.completeTask",
        "title": "Complete Task",
        "category": "FORGE"
      }
    ],
    "configuration": {
      "title": "FORGE Framework",
      "properties": {
        "forge.autoUpdateCopilotContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically update Copilot context when prevention rules change"
        },
        "forge.maxPreventionRules": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of prevention rules to include in Copilot context"
        },
        "forge.taskTimeEstimation": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic task time estimation and atomicity analysis"
        },
        "forge.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for FORGE events"
        }
      }
    },
    "snippets": [
      {
        "language": "markdown",
        "path": "./snippets/forge.json"
      }
    ],
    "grammars": [
      {
        "language": "markdown",
        "scopeName": "text.html.markdown.forge",
        "path": "./syntaxes/forge-task.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "vsce package --dependencies",
    "package-webpack": "webpack --mode production && vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "sinon": "^21.0.0",
    "ts-loader": "^9.5.2",
    "typescript": "^4.9.4",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "date-fns": "^2.29.3",
    "fs-extra": "^11.1.1",
    "yaml": "^2.3.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cecon/forge-framework.git"
  },
  "bugs": {
    "url": "https://github.com/cecon/forge-framework/issues"
  },
  "homepage": "https://github.com/cecon/forge-framework#readme",
  "license": "MIT",
  "author": "",
  "type": "commonjs"
}
