{
    "comments": {
        "blockComment": ["<!--", "-->"]
    },
    "brackets": [
        ["<", ">"]
    ],
    "autoClosingPairs": [
        { "open": "<", "close": ">", "notIn": ["string"] },
        { "open": "\"", "close": "\"", "notIn": ["comment"] },
        { "open": "'", "close": "'", "notIn": ["comment"] }
    ],
    "surroundingPairs": [
        ["<", ">"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "indentationRules": {
        "increaseIndentPattern": "<(?!\\?|(?:area|base|br|col|frame|hr|img|input|link|meta|param)\\b|[^>]*\\/>)([-_\\.A-Za-z0-9]+)(?=\\s|>)\\b[^>]*>(?!.*<\\/\\1>)|<!--(?!.*-->)|\\{[^}\"']*$",
        "decreaseIndentPattern": "^\\s*(<\\/[-_\\.A-Za-z0-9]+\\b[^>]*>|-->|\\})"
    }
}
