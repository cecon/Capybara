{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Capybara Task Markdown",
    "scopeName": "text.html.markdown.forge",
    "patterns": [
        {
            "include": "text.html.markdown"
        },
        {
            "name": "markup.bold.forge.prevention-rule",
            "match": "❌\\s*\\*\\*DON'T\\*\\*.*?→.*$",
            "captures": {
                "0": {
                    "name": "markup.bold.forge.prevention-rule"
                }
            }
        },
        {
            "name": "markup.italic.forge.source",
            "match": "\\*Source:.*?\\*",
            "captures": {
                "0": {
                    "name": "markup.italic.forge.source"
                }
            }
        },
        {
            "name": "entity.name.section.forge.task-header",
            "match": "^# Task: .*$"
        },
        {
            "name": "entity.name.section.forge.completion-header", 
            "match": "^# Task Completion: .*$"
        },
        {
            "name": "entity.name.section.forge.difficulty-header",
            "match": "^# Difficulties & Prevention Rules: .*$"
        },
        {
            "name": "markup.heading.forge.emoji-section",
            "match": "^## [🎯📋🚫⏱️✅📊🔧📁🎓📈🚨].*$"
        },
        {
            "name": "constant.character.forge.checkbox-checked",
            "match": "- \\[x\\].*$"
        },
        {
            "name": "variable.other.forge.checkbox-unchecked",
            "match": "- \\[ \\].*$"
        },
        {
            "name": "markup.italic.forge.metadata",
            "match": "\\*\\*(Estimated|Actual|Variance|Atomicity):\\*\\*"
        },
        {
            "name": "string.other.forge.time-estimate",
            "match": "\\b\\d+(\\.\\d+)?\\s*h\\b"
        },
        {
            "name": "markup.inserted.forge.atomic",
            "match": "✅\\s*Atomic"
        },
        {
            "name": "markup.deleted.forge.non-atomic",
            "match": "❌\\s*Not\\s*Atomic"
        }
    ]
}
